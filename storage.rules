rules_version = '2';

// 游댠 FIREBASE STORAGE SECURITY RULES
// Reglas para gesti칩n de im치genes y archivos

service firebase.storage {
  match /b/{bucket}/o {
    
    // === IM츼GENES DE PERFIL ===
    // 游 Solo el propietario puede gestionar sus fotos de perfil
    match /profile_images/{fileName} {
      // Permitir lectura de im치genes de perfil para mostrar en la app
      allow read: if true;
      
      // Solo usuarios autenticados pueden subir/modificar sus propias im치genes
      allow write: if request.auth != null && 
                   fileName.matches('.*' + request.auth.uid + '.*') &&
                   request.resource.size < 5 * 1024 * 1024 && // M치ximo 5MB
                   request.resource.contentType.matches('image/.*'); // Solo im치genes
    }
    
    // === IM츼GENES DE SERVICIOS ===
    // 游 Solo usuarios autenticados pueden gestionar las im치genes de servicios
    match /service_images/{fileName} {
      // Permitir lectura p칰blica de im치genes de servicios para navegaci칩n
      allow read: if true;
      
      // Solo usuarios autenticados pueden subir/modificar im치genes de servicios
      // Reglas m치s permisivas para solucionar errores de upload
      allow write: if request.auth != null && 
                   request.resource != null &&
                   request.resource.size < 10 * 1024 * 1024 && // M치ximo 10MB para servicios
                   request.resource.contentType != null &&
                   request.resource.contentType.matches('image/.*') && // Solo im치genes
                   // Validar formatos permitidos (JPEG, PNG, WebP)
                   (request.resource.contentType == 'image/jpeg' ||
                    request.resource.contentType == 'image/png' ||
                    request.resource.contentType == 'image/webp' ||
                    request.resource.contentType == 'image/jpg');
      
      // Permitir actualizaci칩n de metadatos
      allow update: if request.auth != null;
    }
    
    // === DOCUMENTOS Y CERTIFICADOS ===
    // Para futuras funcionalidades de verificaci칩n
    match /documents/{userId}/{fileName} {
      allow read, write: if request.auth != null && 
                        request.auth.uid == userId &&
                        request.resource.size < 2 * 1024 * 1024; // M치ximo 2MB para documentos
    }
    
    // 游뛂 Denegar acceso a todo lo dem치s por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}